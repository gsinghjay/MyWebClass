{
  "name": "mywebclass",
  "version": "1.0.0",
  "description": "MyWebClass.org - Design Styles Gallery built with Eleventy and Sanity CMS",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:css": "npx tailwindcss -i src/styles/main.css -o public/styles/main.css --watch",
    "build": "npm-run-all build:css build:eleventy",
    "build:css": "NODE_ENV=production npx tailwindcss -i src/styles/main.css -o public/styles/main.css --minify",
    "build:eleventy": "eleventy",
    "start": "eleventy --serve",
    "test": "node --test tests/sanity.test.mjs",
    "studio:dev": "cd studio && npm run dev",
    "studio:build": "cd studio && npm run build",
    "studio:deploy": "cd studio && npm run deploy"
  },
  "keywords": [
    "eleventy",
    "sanity",
    "design",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.1",
    "@11ty/eleventy-img": "^6.0.4",
    "@types/node": "^24.10.1",
    "autoprefixer": "^10.4.22",
    "cssnano": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@sanity/client": "^7.13.1"
  }
}
