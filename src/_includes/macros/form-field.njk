{% macro input(name, label, type="text", placeholder="", required=false, helpText="") %}
<div class="form-group">
  <label for="{{ name }}" class="form-label">
    {{ label }}
    {% if required %}<span class="text-swiss-red">*</span>{% endif %}
  </label>
  <input
    type="{{ type }}"
    id="{{ name }}"
    name="{{ name }}"
    class="form-input"
    placeholder="{{ placeholder }}"
    {% if required %}required aria-required="true"{% endif %}
    aria-describedby="{% if helpText %}{{ name }}-helper {% endif %}{{ name }}-error"
    aria-invalid="false"
    {% if type == 'email' %}autocomplete="email"{% endif %}
  />
  {% if helpText %}
  <p id="{{ name }}-helper" class="form-helper">{{ helpText }}</p>
  {% endif %}
  <p id="{{ name }}-error" class="form-error hidden" role="alert"></p>
</div>
{% endmacro %}

{% macro select(name, label, options, required=false, helpText="") %}
<div class="form-group">
  <label for="{{ name }}" class="form-label">
    {{ label }}
    {% if required %}<span class="text-swiss-red">*</span>{% endif %}
  </label>
  <select
    id="{{ name }}"
    name="{{ name }}"
    class="form-input bg-white"
    {% if required %}required aria-required="true"{% endif %}
    aria-describedby="{% if helpText %}{{ name }}-helper {% endif %}{{ name }}-error"
    aria-invalid="false"
  >
    <option value="">Select {{ label | lower }}...</option>
    {% for option in options %}
    <option value="{{ option.value }}">{{ option.label }}</option>
    {% endfor %}
  </select>
  {% if helpText %}
  <p id="{{ name }}-helper" class="form-helper">{{ helpText }}</p>
  {% endif %}
  <p id="{{ name }}-error" class="form-error hidden" role="alert"></p>
</div>
{% endmacro %}

{% macro textarea(name, label, rows=5, placeholder="", required=false, helpText="") %}
<div class="form-group">
  <label for="{{ name }}" class="form-label">
    {{ label }}
    {% if required %}<span class="text-swiss-red">*</span>{% endif %}
  </label>
  <textarea
    id="{{ name }}"
    name="{{ name }}"
    rows="{{ rows }}"
    class="form-input resize-none"
    placeholder="{{ placeholder }}"
    {% if required %}required aria-required="true"{% endif %}
    aria-describedby="{% if helpText %}{{ name }}-helper {% endif %}{{ name }}-error"
    aria-invalid="false"
  ></textarea>
  {% if helpText %}
  <p id="{{ name }}-helper" class="form-helper">{{ helpText }}</p>
  {% endif %}
  <p id="{{ name }}-error" class="form-error hidden" role="alert"></p>
</div>
{% endmacro %}

{% macro checkbox(name, label, required=false) %}
<div class="flex items-start gap-3">
  <input
    type="checkbox"
    id="{{ name }}"
    name="{{ name }}"
    class="mt-1 min-w-[44px] min-h-[44px] w-6 h-6 cursor-pointer"
    {% if required %}required aria-required="true"{% endif %}
    aria-describedby="{{ name }}-error"
    aria-invalid="false"
  />
  <label for="{{ name }}" class="text-sm text-neutral-600 cursor-pointer min-h-[44px] flex items-center">
    {{ label | safe }}
  </label>
</div>
<p id="{{ name }}-error" class="form-error hidden mt-1" role="alert"></p>
{% endmacro %}
