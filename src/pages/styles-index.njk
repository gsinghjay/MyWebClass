{% import "macros/card.njk" as cards with context %}

{# Hero Section #}
<section class="bg-black text-white">
  <div class="container-custom py-12 md:py-16">
    <p class="text-neutral-400 text-overline mb-4">Browse & Learn</p>
    <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
      Design Style Gallery
    </h1>
    <p class="text-xl text-neutral-300 max-w-2xl">
      Explore {{ designStyles.styles.length }} iconic design movements. Pick one that inspires you, study its principles, and submit your own implementation.
    </p>
  </div>
</section>

{# Gallery Section #}
<section id="gallery" class="section-padding">
  <div class="container-custom">
    {# Filter buttons - mobile scrollable, desktop wrapped #}
    <div class="filter-scroll-container">
      <nav
        id="filter-buttons"
        class="flex gap-2 overflow-x-auto pb-4 mb-8 -mx-4 px-4 md:mx-0 md:px-0 md:flex-wrap md:overflow-visible"
        role="group"
        aria-label="Filter gallery by design style category"
      >
        <button
          type="button"
          class="filter-btn px-4 py-2 border-2 border-black text-sm font-medium transition-colors bg-black text-white whitespace-nowrap"
          data-filter="all"
          aria-pressed="true"
        >All Styles</button>
        {% for category in designStyles.categories %}
        <button
          type="button"
          class="filter-btn px-4 py-2 border-2 border-black text-sm font-medium transition-colors bg-white text-black hover:bg-neutral-100 whitespace-nowrap"
          data-filter="{{ category }}"
          aria-pressed="false"
        >{{ category | replace('-', ' ') | title }}</button>
        {% endfor %}
      </nav>
    </div>

    {% if designStyles.styles.length %}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for style in designStyles.styles %}
        <a
          href="{{ '/styles/' | url }}{{ style.slug.current or style.slug }}/"
          class="block gallery-card"
          data-category="{{ style.category or 'uncategorized' }}"
        >
          {{ cards.galleryCard(style) }}
        </a>
      {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-16 border-2 border-dashed border-neutral-300">
      <p class="text-xl text-neutral-500 mb-4">No design styles available yet.</p>
      <p class="text-neutral-400">Check back soon for our curated collection.</p>
    </div>
    {% endif %}
  </div>
</section>

{# CTA Section #}
<section class="bg-black text-white section-padding">
  <div class="container-custom text-center">
    <h2 class="text-h2 mb-4">Found a style you like?</h2>
    <p class="text-neutral-400 mb-8 max-w-xl mx-auto">
      Build an authentic implementation and submit it to be featured in our community gallery.
    </p>
    <a href="{{ '/submit/' | url }}" class="btn btn-primary bg-white text-black hover:bg-neutral-200 inline-block">
      Submit Your Demo
    </a>
  </div>
</section>

{% block scripts %}
<script src="{{ '/scripts/gallery-filter.js' | url }}" defer></script>
{% endblock %}
